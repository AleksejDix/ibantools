{
  "name": "ibantools",
  "version": "4.5.1",
  "description": "Validation, extraction and creation of IBAN, BBAN, BIC/SWIFT numbers",
  "keywords": [
    "IBAN",
    "BBAN",
    "BIC",
    "SEPA",
    "SWIFT"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "homepage": "https://github.com/Simplify/ibantools",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simplify/ibantools.git"
  },
  "bugs": "https://github.com/Simplify/ibantools/issues",
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "oxlint --type-aware src/ test/",
    "prepare": "npm run build",
    "docs": "typedoc src/ibantools.ts",
    "all": "npm run test && npm run lint && npm run docs"
  },
  "author": {
    "name": "Saša Jovanić",
    "url": "https://www.simplify.ba/"
  },
  "license": "MIT or MPL-2.0",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.4",
    "prettier": "^3.0.3",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "^4.0.15"
  }
}
